<% content_for :head do %>
  <meta name="csrf-token" content="<%= csrf_meta_tags %>">
  <meta name="event-id" content="<%= @event.id %>">
  <style>
    /* Include the CSS here or link to your stylesheet */
  </style>
<% end %>

<div class="event-page-container">
  <h1 class="event-name"><%= @event.name %></h1>
  <h2 class="invite-heading">Invite Your Guests</h2>
  <p class="invite-message">Make sure your guests donâ€™t miss out on capturing memories! Share this event with them! </p>

  <div id="qr-code-container" class="qr-code-container">
    <% if @event.qr_code.present? %>
      <%= @qr_code_svg %>
    <% else %>
      <p class="no-qr-message">No QR code generated yet. Create one to easily share this event.</p>
    <% end %>
  </div>

  <div id="qr-options-menu" class="qr-options-menu">
    <% if @event.qr_code.present? %>
      <button onclick="printQRCode()" class="btn btn-secondary print-btn">Print QR Code</button>
    <% end %>
  </div>
</div>
