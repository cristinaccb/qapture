<h1>Leave a Message for <%= @event.name %></h1>

<%= form_with(model: [@event, @message], local: true) do |form| %>
  <div class="field">
    <%= form.label :content, "Your Message:" %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit "Post Message" %>
  </div>
<% end %>

<%= link_to 'Back to Event', event_path(@event) %>
