<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Qapture</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        /* Existing styles... */

        /* Updated button styling */
        .auth-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }

        .auth-button {
            display: inline-block;
            padding: 12px 24px;
            background: rgba(255, 255, 255, 0.7);
            border: none;
            border-radius: 30px;
            color: #333;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1), -4px -4px 10px rgba(255, 255, 255, 0.7);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .auth-button:hover {
            background-color: rgba(255, 255, 255, 0.9);
            box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1), -2px -2px 5px rgba(255, 255, 255, 0.7);
            transform: translateY(-2px);
        }

        .auth-button:active {
            transform: translateY(0);
            box-shadow: inset 2px 2px 5px rgba(0, 0, 0, 0.1), inset -2px -2px 5px rgba(255, 255, 255, 0.7);
        }

        .auth-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                120deg,
                transparent,
                rgba(255, 255, 255, 0.4),
                transparent
            );
            transition: all 0.5s;
        }

        .auth-button:hover::before {
            left: 100%;
        }

        /* Adjust main content spacing */
        main {
            padding-top: 50px;
        }

        .email-tab {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <header>
        <div class="logo-container">
            <img src="logo.png" alt="Qapture Logo" class="logo">
        </div>
    </header>

    <main>
        <h1>Your photos app, but with friends ★</h1>
        <div class="learn-more-link">
            <a href="/learn_more">Want to learn more about Qapture? Click here!</a>
        </div>

        <!-- Neomorphic Email Tab with Transparency, Longer and Skinnier -->
        <div class="email-tab">
            <h2>Join the Waitlist</h2>
            <div class="email-input-container">
                <input type="email" id="emailInput" placeholder="Enter your email" required>
                <button type="button" onclick="submitEmail()">Submit</button>
            </div>
        </div>

        <!-- Centered Sign Up and Sign In buttons -->
        <div class="auth-buttons">
            <a href="/users/sign_up" class="auth-button">Sign Up</a>
            <a href="/users/sign_in" class="auth-button">Sign In</a>
        </div>
    </main>

    <div class="background-video">
        <iframe src="https://player.vimeo.com/video/998936457?background=1&autoplay=1&muted=1&loop=1"
                frameborder="0" allowfullscreen style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;">
        </iframe>
    </div>
    <script>
        function submitEmail() {
            var email = document.getElementById('emailInput').value;
            console.log('Email submitted:', email);
            // Add AJAX call or form submission logic here
        }

        // GSAP Animations
        document.addEventListener('DOMContentLoaded', (event) => {
            // Animate the main content
            gsap.from("main > *", {
                duration: 1,
                opacity: 0,
                y: 30,
                stagger: 0.2,
                ease: "power2.out"
            });

            // Add hover animation to auth buttons
            document.querySelectorAll('.auth-button').forEach(button => {
                button.addEventListener('mouseenter', (e) => {
                    gsap.to(e.target, {
                        duration: 0.3,
                        scale: 1.05,
                        ease: "power1.out"
                    });
                });

                button.addEventListener('mouseleave', (e) => {
                    gsap.to(e.target, {
                        duration: 0.3,
                        scale: 1,
                        ease: "power1.out"
                    });
                });
            });
        });
    </script>
    <footer>
        <div class="footer-container">
            <span>© 2024 Qapture. All rights reserved.</span>
        </div>
    </footer>
</body>
</html>
